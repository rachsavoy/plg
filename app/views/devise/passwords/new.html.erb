<div class="form-page-background">
  <div class="container d-flex h-100 align-items-center justify-content-center">
    <div class="home-card">
      <a href="https://www.parlatorelawgroup.com">
        <img height="150" alt="logo image" src="https://www.dropbox.com/s/4p41fikdjrjhfdy/gold_logo.png?raw=1">
      </a>
    </div>
    <div class="form-card">
      <h2>Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Submit" %>
        </div>
      <% end %>
        <p>Check your email for your reset pasword instructions.</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
